{
  "name": "r45",
  "version": "0.0.1",
  "description": "...",
  "scripts": {
    "build:client": "webpack --config webpack.client.config.js -p",
    "build:server": "tsc",
    "build:all": "yarn run build:client && yarn run build:server",
    "watch:client": "node_modules/.bin/nodemon --watch src/client --watch src/model --watch src/view --watch src/utils -e js,css --exec \"yarn run build:client\"",
    "watch:server": "node_modules/.bin/nodemon --watch src/server --watch src/model --watch src/utils -e js --exec \"yarn run build:server && node server.bundle.js \"",
    "build": "yarn run build:all",
    "start:ui": "node src/client/ui-server.js",
    "start:server": "nodemon dist/server/game-server.js --exec node js",
    "debug": "node --inspect-brk server.bundle.js",
    "debug:watch:server": "node_modules/.bin/nodemon --watch src/server --watch src/model --watch src/utils -e js --exec \"yarn run build:server && node --inspect-brk server.bundle.js\"",
    "debug:ext": "./node_modules/.bin/node-debug --hidden node_modules/ --debug-brk false server.bundle.js",
    "lint": "eslint src",
    "test": "mocha  --compilers ts:ts-node/register --reporter spec -w src/**/*.spec.ts",
    "test:ava": "ava src/**/*.spec.js"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "keywords": [],
  "author": "Krzysztof Kabat (https://github.com/Odrinwhite)",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.2",
    "@types/react": "^16.3.5",
    "@types/react-dom": "^16.0.4",
    "@types/react-redux": "^5.0.15",
    "@types/react-tap-event-plugin": "0.0.30",
    "@types/redux-actions": "^2.2.4",
    "@types/socket.io": "^1.4.33",
    "@types/socket.io-client": "^1.4.30",
    "chai": "^4.1.2",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "inspect-process": "^0.5.0",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.3",
    "nyc": "^11.6.0",
    "react-tap-event-plugin": "^3.0.2",
    "style-loader": "^0.20.3",
    "ts-loader": "^4.1.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.4.3",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "2.8.1",
    "webpack": "^4.5.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.21.2"
  },
  "dependencies": {
    "express": "^4.16.3",
    "immutable": "v4.0.0-rc.2",
